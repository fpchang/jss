/* pages/home/components/roomReservationComponent/roomReservationComponent.wxss */
.roomReservation{
  height: 100%;
  background-color: #f7f8fa;
}
.dateSelect{
  display: flex;
  height:90rpx;
  justify-content: center;
  box-shadow: 0 8px 12px #ebedf0;
  background-color: #fff;
}
.dateSelect .dateSelect-cell{
  flex:1;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  box-sizing: border-box;
  justify-content: center;
}
.dateSelect .dateSelect-cell:first-child{
  align-items:flex-start;  
  padding-left: 40rpx;
}
.dateSelect .dateSelect-cell:nth-child(2){
  align-items: center;
}
.dateSelect .dateSelect-cell:last-child{
  align-items:flex-end;  
  padding-right: 40rpx;
}
.dateSelect .dateSelect-cell .date-text{
  color: orange;
  font-size: 30rpx;
  font-weight: bold;
}
.room-card-list{
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.room-card{
  display: flex;
  flex-direction: column;
  width: 650rpx;
  overflow: hidden;
  box-shadow: 0 8px 12px #ebedf0;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}
.room-card:last-child{
  margin:0;
}