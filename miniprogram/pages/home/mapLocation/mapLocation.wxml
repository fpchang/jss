<!--pages/home/mapLocation/mapLocation.wxml-->
<view class="flex-page">
  <view class="flex-page-nav">
    <navbar page-name="" show-nav="{{true}}"></navbar>
  </view>
  <view class="flex-page-content">
    <view class="map-style">
  <map
      id="locationMap"
      style="width: 100%; height: 100vh;"
      latitude="{{location.latitude}}"
      longitude="{{location.longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      subkey="{{mapKey}}"
      layer-style="1"
      scale="{{14}}"
      show-location="{{false}}"
     
    ></map>
    <view class="content">
      <view class="container">
        <view class="header">
          <view class="title">{{vehicleName}}</view>
          <view class="state">{{carStateStr}}</view>
        </view>
        <view class="position">
          {{location.recommend}}
        </view>
      </view>
    </view>
</view>
  </view>
  <view class="flex-page-control">
  </view>
</view>
